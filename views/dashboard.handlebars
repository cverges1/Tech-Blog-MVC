<ul class="list-group">
  {{#each posts}}
    <li class="list-group-item">
      <div class="d-flex w-100 justify-content-between">
        <a href="/post/{{id}}"><h2>{{title}}</h2>
          <span><h5>- created by
              {{user.username}}
              on
              {{format_date createdAt}}</h5></span>
        </a>
        <small>{{commentsCount}} comments so far</small>
      </div>
<a class="btn btn-primary" href="/dashboard/post/{{id}}" role="button">UPDATE/DELETE</a>
    </li>
  {{/each}}
</ul>