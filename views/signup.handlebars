<div class="background">
  <h2>Create Account</h2>
  <form class="background m-5" id="signup-form">
    <div class="background m-3">
      <label for="username" class="form-label">Username:</label>
      <input id="username" class="form-control" type="text" />
    </div>
    <div class="background m-3">
      <label for="user-email" class="form-label">Email:</label>
      <input id="user-email" class="form-control" type="email" />
    </div>

    <div class="background m-3">
      <label for="user-password" class="form-label">Password:</label>
      <input id="user-password" class="form-control" type="password" />
    </div>
    <div class="background m-3" id="emailHelp">
      We'll never share your information with anyone else.
    </div>
    <button class="btn btn-primary" type="submit">SIGN UP</button>
  </form>
</div>

<script src="/js/signup.js"></script>